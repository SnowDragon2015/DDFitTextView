<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.ddfittextviewtest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context="com.example.ddfittextviewtest.MainActivity" >

    <com.dd.views.DDFitTextView
        android:id="@+id/tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="16sp"
        custom:iconPaddingTop="0dp"
        custom:iconTextColor="#999999"
        custom:iconTextPaddingSameGroup="3dp"
        custom:iconTextSize="12sp"
        custom:iconpTextPaddingDifferentGroup="6dp" />

</RelativeLayout>